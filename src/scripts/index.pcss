.popup {
  position: fixed;
  box-sizing: border-box;
  left: 50%;
  top: 50%;
  width: 800px;
  height: 600px; /* TODO: get screen proportion */
  transform: translate(-400px, -300px); /* TODO: add variables */
  background: whitesmoke;
  padding: 20px;
  border: 2px solid grey;
  border-radius: 10px;

  &.popup-hidden {
    display: none;
  }

  &.popup-visible {
    display: block;
  }

  &.popup-minimized {
    /* some styles */
  }
}