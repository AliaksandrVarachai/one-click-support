 .container {
   width: 1000px;
   margin: 0 auto;
 }

 .header {
   margin: 15px 0;
   text-align: center;
   font-weight: bold;
   font-size: 20px;
 }

 .content {
   width: 100%;
   table-layout: fixed;
   border-collapse: collapse;
 }

 .content th {
   text-transform: uppercase;
   background: whitesmoke;
 }

 .content th, .content td {
   border: 1px solid gray;
   padding: 5px 10px;
 }

 .content tr:first-child th:first-child {
   width: 25%;
 }

 .image {
   max-width: 100%;
 }

 .image-header {
   margin: 5px 0;
 }
